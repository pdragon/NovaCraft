                       FontWeight="Bold"/>
            <StackPanel HorizontalAlignment="Right"
                        Margin="0 0 10 0"
                        Orientation="Horizontal">
                <PathIcon Data="{StaticResource Document}"
                          Foreground="White"/>
                <TextBlock Name="ProgressFiles"
                           Text="0/1 files"
                           Margin="5 0 0 8"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Left"
                           FontWeight="Bold"/>
            </StackPanel>
        </Panel>
	</Panel>
	
