        <!-- Authentication overlay -->
        <Panel Name="Authentication" 
               IsVisible="False">
			<Rectangle HorizontalAlignment="Stretch"
					   Fill="#80000000"
                       VerticalAlignment="Stretch"
                        />
			<Grid>
				<!-- Строка для заголовка -->
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<!-- Для панели с кнопкой -->
					<RowDefinition Height="*"/>
					<!-- Для TabControl -->
				</Grid.RowDefinitions>

            
			<Border Background="#000080" Height="24" Grid.Row="0">
				<DockPanel Margin="2,0">
					<TextBlock Text="ModPack Edit"
							   Foreground="White"
							   FontWeight="Bold"
							   VerticalAlignment="Center"
							   Margin="4,0"
							   FontSize="12"
							   Padding="4"
					   />

					<Button
							Classes="close-button"
							Click="CloseAuthPanel">
						<PathIcon Data="{StaticResource Close}"
						  Width="11"
						  Height="11"/>
					</Button>
				</DockPanel>
			</Border>

			
			<TabControl Grid.Row="1">
                <TabItem>
                    <TabItem.Header>
                        <TextBlock Text="Accounts"/>
                    </TabItem.Header>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Select account"
                                   FontSize="24" FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="You need to select an account"
                                   FontSize="16"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="to use for authentication"
                                   FontSize="16" Margin="0 0 0 10"
                                   HorizontalAlignment="Center"/>
                        <ComboBox HorizontalAlignment="Center"
                                  Width="200" Name="Accounts"
                                  SelectedIndex="0">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center">
                            <Button Height="35" Width="100"
                                    Background="#1fa803"
                                    Opacity="120"
                                    CornerRadius="5"
                                    HorizontalAlignment="Center"
                                    Margin="0 10 10 0"
                                    Click="SelectAccount">
                                <Button.Styles>
                                    <Style Selector="Button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
                                        <Setter Property="Background" 
                                                Value="#22cb00"/>
                                    </Style>
                                </Button.Styles>
                                <TextBlock Text="Select this"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
										   
										   />
                            </Button>
                            <Button Height="35" Width="70"
                                    Background="#e63f29"
                                    Opacity="120"
                                    CornerRadius="5"
                                    HorizontalAlignment="Center"
                                    Margin="0 10 0 0"
                                    Click="DeleteAccount">
                                <Button.Styles>
                                    <Style Selector="Button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
                                        <Setter Property="Background" 
                                                Value="#a32d1d"/>
                                    </Style>
                                </Button.Styles>
                                <TextBlock Text="Delete"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <TextBlock Text="Nickname"/>
                    </TabItem.Header>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="No authentication"
                                   FontSize="24" FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="This type of authentication won't allow you"
                                   FontSize="16"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="to play on online-mode servers"
                                   FontSize="16" Margin="0 0 0 25"
                                   HorizontalAlignment="Center"/>
                        <TextBox Width="300" Watermark="Username"
                                 Name="UsernameCracked"/>
                        <Button Height="35" Width="125"
                                Background="#1fa803"
                                Opacity="120"
                                CornerRadius="5"
                                HorizontalAlignment="Center"
                                Margin="0 10 0 0"
                                Click="CrackedLogin">
                            <Button.Styles>
                                <Style Selector="Button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
                                    <Setter Property="Background" 
                                            Value="#22cb00"/>
                                </Style>
                                <Style Selector="Button:pressed /template/ ContentPresenter#PART_ContentPresenter">
                                    <Setter Property="Background" 
                                            Value="#27d803"/>
                                </Style>
                            </Button.Styles>
                            <StackPanel Orientation="Horizontal">
                                <PathIcon Data="{StaticResource
                                AddRegular}"
                                          Foreground="White"/>
                                <TextBlock Text="Add account"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Margin="5 0 0 0"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <TextBlock Text="Microsoft"/>
                    </TabItem.Header>
                    <StackPanel VerticalAlignment="Center" ToolTip.Tip="Under Construction">
                        <TextBlock Text="Microsoft Account"
                                   FontSize="24" FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="This type of authentication will allow you"
                                   FontSize="16"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="to play on online-mode servers. Browser"
                                   FontSize="16"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="would open for you to login."
                                   FontSize="16"
                                   HorizontalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center">
                            <Button Height="35" Width="125"
                                    Background="#1fa803"
                                    Opacity="120"
                                    CornerRadius="5"
                                    HorizontalAlignment="Center"
                                    Margin="0 10 0 0"
                                    Name="LoginButton"
									IsEnabled="False"
                                    Click="MicrosoftLogin">
                                <Button.Styles>
                                    <Style Selector="Button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
                                        <Setter Property="Background" 
                                                Value="#22cb00"/>
                                    </Style>
                                </Button.Styles>
                                <StackPanel Orientation="Horizontal">
                                    <PathIcon Data="{StaticResource
                                AddRegular}"
                                              Foreground="White"/>
                                    <TextBlock Text="Add account"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Margin="5 0 0 0"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <TextBlock Text="Mojang"/>
                    </TabItem.Header>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Mojang Account"
                                   FontSize="24" FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="This type of authentication will allow you"
                                   FontSize="16"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="to play on online-mode servers"
                                   FontSize="16" Margin="0 0 0 25"
                                   HorizontalAlignment="Center"/>
                        <TextBox Width="300" Watermark="Username"
                                 Name="UsernameMojang"
                                 Margin="0 0 0 10"/>
                        <TextBox Width="300" Watermark="Password"
                                 Name="PasswordMojang"
                                 PasswordChar="*"/>
                        <Button Height="35" Width="125"
                                Background="#1fa803"
                                Opacity="120"
                                CornerRadius="5"
                                HorizontalAlignment="Center"
                                Margin="0 10 0 0"
                                Click="MojangLogin"
                                Name="MojangButton">
                            <Button.Styles>
                                <Style Selector="Button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
                                    <Setter Property="Background" 
                                            Value="#22cb00"/>
                                </Style>
                                <Style Selector="Button:pressed /template/ ContentPresenter#PART_ContentPresenter">
                                    <Setter Property="Background" 
                                            Value="#27d803"/>
                                </Style>
                            </Button.Styles>
                            <StackPanel Orientation="Horizontal">
                                <PathIcon Data="{StaticResource
                                AddRegular}"
                                          Foreground="White"/>
                                <TextBlock Text="Add account"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Margin="5 0 0 0"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </TabItem>
            </TabControl>
			</Grid>
        </Panel>
		<!-- Loading overlay -->
        <Panel IsVisible="True"
			   
               Name="Loading">
            <Rectangle HorizontalAlignment="Stretch"
